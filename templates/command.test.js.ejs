const {expect, test} = require('@dxcli/test')

const command = '<%- name %>'

describe(command, () => {
  test
    .stdout()
    .command([command])
    .do(ctx => expect(ctx.stdout).to.equal('hello world from <%- name %>!\n'))
    .it()

  test
    .stdout()
    .command([command, '--name', 'jeff'])
    .do(ctx => expect(ctx.stdout).to.equal('hello jeff from <%- name %>!\n'))
    .it()
})
