{
  "ts-node": {
    "transpileOnly": true
  },
  "compilerOptions": {
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "module": "Node16",
    "outDir": "./lib",
    "rootDirs": ["./src"],
    "strict": true,
    "target": "es2022",
    "skipLibCheck": true,
    "moduleResolution": "Node16"
  },
  "include": ["./src/**/*"]
}
