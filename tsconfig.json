{
  "ts-node": {
    "transpileOnly": true
  },
  "compilerOptions": {
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "outDir": "./lib",
    "rootDirs": ["./src"],
    "strict": true,
    "target": "es2022",
    "skipLibCheck": true
  },
  "include": ["./src/**/*"]
}
